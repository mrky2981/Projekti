@model ItemAddVM
<h2>Upis novog artikla</h2>

@* a form for the user to add an item to the inventory*@
<form asp-action="AddItem" method="post">
    <div>
        <label for="Name">Item Name</label>
        @*adding a text box to add the necessery information about an item for the inventory*@
        <input type="text" id="Name" name="Item.Name" value="@Model.Item.Name" required />
    </div>
    <div>
        <label for="Price">Price</label>
        <input type="number" step="0.01" id="Price" name="Item.Price" value="@Model.Item.Price" required />
    </div>
    <div>
        <label for="Quantity">Quantity</label>
        <input type="number" id="Quantity" name="Item.Quantity" value="@Model.Item.Quantity" required />
    </div>
    <div>
        @*adding a option to selet a categorie of items*@
        <label for="Category">Category</label>
        <select id="Category" name="Item.Category" required>
            @if (Model.Categories.Any())
            {
                @foreach (var category in Model.Categories)
                {
                    <option value="@category">@category</option>
                }
            }
            else
            {
                <option> No categories available</option>
            }
        </select>
    </div>
    <button type="submit">Add Item</button>
</form>
